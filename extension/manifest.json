{
  "manifest_version": 3,
  "name": "Agentic Math Solver",
  "version": "1.0.0",
  "description": "Solve math problems and explain them step by step using math.js, SymPy, and Groq LLM.",
  "permissions": [
    "contextMenus",
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    }
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["math.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["math.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
